# ===========================================
# Multi-Tenant Invoice Reconciliation API
# Environment Configuration
# ===========================================

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=invoices
DATABASE_USER=invoice_user
DATABASE_PASSWORD=secure_password_here
DATABASE_URL=

# -------------------------------------------
# JWT Configuration
# -------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_ISSUER=invoice-reconciliation-api

# -------------------------------------------
# AI Service Configuration
# -------------------------------------------
AI_PROVIDER=openai
AI_API_KEY=sk-your-openai-api-key
AI_MODEL=gpt-4
AI_TIMEOUT=5000
AI_MAX_TOKENS=150
AI_FALLBACK_ENABLED=true

# -------------------------------------------
# Python Backend Configuration
# -------------------------------------------
PYTHON_GRAPHQL_URL=http://localhost:8001/graphql
PYTHON_SERVICE_TIMEOUT=10000

# -------------------------------------------
# Server Configuration
# -------------------------------------------
NESTJS_PORT=3000
PYTHON_PORT=8001
NODE_ENV=development

# -------------------------------------------
# Redis Configuration (Optional - for caching)
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -------------------------------------------
# Logging Configuration
# -------------------------------------------
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# -------------------------------------------
# Super Admin Configuration
# -------------------------------------------
SUPER_ADMIN_EMAIL=admin@system.local
SUPER_ADMIN_PASSWORD=change_me_immediately
